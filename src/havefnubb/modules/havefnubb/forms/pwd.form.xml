<?xml version="1.0" encoding="utf-8"?>
<form xmlns="http://jelix.org/ns/forms/1.1">

<hidden ref="id"/>
<hidden ref="login"/>
<secret ref="old_password"  required="true">
    <label locale="havefnubb~member.pwd.enter.your.actual.pwd"/>
    <hint locale="havefnubb~member.pwd.enter.your.actual.pwd.description"/>
</secret>

<secret ref="conf_password"  required="true">
    <label locale="havefnubb~member.pwd.enter.your.new.pwd"/>
    <hint locale="havefnubb~member.pwd.enter.your.new.pwd.description"/>
    <confirm locale="havefnubb~member.pwd.enter.your.new.pwd2" />
</secret>

<submit ref="validate">
    <label>Veuillez valider</label>
    <item value="save" locale="havefnubb~member.pwd.form.saveBt"/>
</submit>
<reset ref="reset">
    <label locale="havefnubb~member.pwd.form.cancelBt"/>
</reset>
</form>
