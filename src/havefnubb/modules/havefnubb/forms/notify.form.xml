<?xml version="1.0" encoding="utf-8"?>
<form xmlns="http://jelix.org/ns/forms/1.1">

<hidden ref="id_post"/>
<hidden ref="thread_id"/>
<hidden ref="id_forum"/>
<hidden ref="id_user"/>

<menulist ref="reason" required="true">
    <label locale="havefnubb~post.form.reason.notification"/>
    <item value="spam"      locale="havefnubb~post.form.reason.notification.spam"/>
    <item value="insults"   locale="havefnubb~post.form.reason.notification.insults"/>
    <item value="porn"      locale="havefnubb~post.form.reason.notification.porn"/>
    <item value="racism"    locale="havefnubb~post.form.reason.notification.racism"/>
    <item value="others"    locale="havefnubb~post.form.reason.notification.others"/>
    <item value="forum_rules" locale="havefnubb~post.form.reason.notification.forum_rules"/>
</menulist>

<textarea ref="message" rows="10" cols="80">
    <label locale="havefnubb~post.form.message"/>
</textarea>

<submit ref="validate">
  <label>Veuillez valider</label>
  <item value="save" locale="havefnubb~post.form.saveBt"/>
</submit>
<reset ref="reset">
    <label locale="havefnubb~post.form.resetBt"/>
</reset>
</form>
