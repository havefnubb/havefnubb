<?xml version="1.0" encoding="utf-8"?>
<form xmlns="http://jelix.org/ns/forms/1.1">

<hidden ref="step"/>

<input ref="login" required="true">
	<label locale="hfnuinstall~install.adminaccount.login"/>
</input>

<secret ref="password" required="true">
   <label locale="hfnuinstall~install.adminaccount.password"/>
   <hint locale="hfnuinstall~install.adminaccount.password.description"/>
   <help locale="hfnuinstall~install.adminaccount.password.description"/>
   <confirm locale="hfnuinstall~install.adminaccount.repeat.password"/>
</secret>

<input ref="admin_email" type="email" required="true" size="80">
	<label locale="hfnuinstall~install.adminaccount.admin_email"/>
</input>



<submit ref="validate">
  <label>Veuillez valider</label>
  <item value="save" locale="hfnuinstall~install.adminaccount.saveBt"/>
</submit>

</form>