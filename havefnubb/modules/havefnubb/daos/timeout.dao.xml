<?xml version="1.0" encoding="iso-8859-1"?>
<dao xmlns="http://jelix.org/ns/dao/1.0">
    <datasources>
        <primarytable name="c" realname="hfnu_connected" primarykey="id_user"  />
    </datasources>
    <record>
    <property name="id" fieldname="id_user" datatype="autoincrement"/>
    <property name="member_ip"  fieldname="member_ip"   datatype="string"   />
    <property name="connected"  fieldname="connected"   datatype="integer"  />
    <property name="idle"       fieldname="idle"        datatype="integer"  />
   </record>
   <factory>
     <method name="findAllConnected" type="select">
         <parameter name="time" />
         <conditions>
             <lt property="connected" expr="$time" />
         </conditions>
     </method>
     <method name="getConnectedByIdUser" type="selectfirst">
         <parameter name="time" />
		 <parameter name="id_user" />
         <conditions>
             <lt property="connected" expr="$time" />
			 <eq property="id" expr="$id_user" />
         </conditions>
     </method>
   </factory>
</dao>
