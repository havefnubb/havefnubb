<?xml version="1.0" encoding="UTF-8"?>
<dao xmlns="http://jelix.org/ns/dao/1.0">
    <datasources>
        <primarytable           name="category" realname="category" primarykey="id_cat" />
        <optionalforeigntable   name="forum"    realname="forum"    primarykey="id_cat" onforeignkey="id_cat"/>
    </datasources>
    <record>
        <property name="id_cat"     fieldname="id_cat"      datatype="autoincrement"
                                    table="category"/>
        <property name="cat_name"   fieldname="cat_name"    datatype="string"
                                    table="category" required="true" maxlength="255" />
        <property name="cat_order"  fieldname="cat_order"   datatype="int"
                                    table="category" required="true" />

        <property name="id_forum"       fieldname="id_forum"    datatype="int"
                                        table="forum"/>
        <property name="parent_id"      fieldname="parent_id"   datatype="int"
                                        table="forum"/>
        <property name="forum_type"     fieldname="forum_type"  datatype="int"
                                        table="forum"/>
        <property name="forum_name"     fieldname="forum_name"  datatype="string"
                                        table="forum"/>
        <property name="forum_desc"     fieldname="forum_desc"  datatype="string"
                                        table="forum" required="true" maxlength="255"/>
        <property name="forum_order"    fieldname="forum_order" datatype="int"
                                        table="forum" required="true"/>
        <property name="child_level"    fieldname="child_level" datatype="int"
                                        table="forum" required="true"/>
        <property name="forum_url"      fieldname="forum_url"   datatype="string"
                                        table="forum" maxlength="255" />
    </record>
    <factory>
        <method name="findAll">
            <order>
                <orderitem property="cat_order" way="asc" />
            </order>
        </method>
        <method name="findAllCatWithFathers" type="select">
            <conditions>
                <eq property="parent_id" value="0"/>
            </conditions>
            <order>
                <orderitem property="cat_order" way="asc" />
                <orderitem property="forum_order" way="asc" />
            </order>
        </method>
        <method name="countByIdCat" type="count">
            <parameter name="id_cat" />
            <conditions>
                <eq property="id_cat" expr="$id_cat" />
            </conditions>
        </method>
    </factory>
</dao>
