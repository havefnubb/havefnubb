<?xml version="1.0" encoding="UTF-8"?>
<dao xmlns="http://jelix.org/ns/dao/1.0">
    <datasources>
        <primarytable name="pages" realname="iah_pages"  primarykey="id_pages" />
    </datasources>
    <record>
        <property name="id_pages" fieldname="iah_id_pages" datatype="autoincrement"/>
        <property name="template" fieldname="iah_template" datatype="string" required="true"/>
        <property name="label"    fieldname="iah_label"    datatype="string" required="true"/>
        <property name="page_name" fieldname="iah_page_name" datatype="string" required="true"/>
    </record>

    <!-- naming convention :
        findXXX uses type="select"
        getXXX uses type="selectfirst"
        countXXX uses type="count"
    -->
    <factory>
        <method name="getByTemplateName" type="selectfirst">
            <parameter name="template" />
            <conditions>
                <eq property="template" expr="$template" />
            </conditions>
        </method>
    </factory>
</dao>
