   <input ref="nickname" required="true">
      <label locale="account.form.nickname"/>
   </input>

   <input ref="email"  required="true" type="email">
       <label locale="account.form.email"/>
   </input>
   
   <date ref="member_birth" mindate="1910-01-01">
       <label locale="havefnubb~member.birthday"/>
   </date>

   <input ref="member_firstname">
       <label locale="havefnubb~member.common.firstname"/>
   </input>

   <upload ref="member_avatar" mimetype="image/jpeg;image/pjpeg;image/png;image/gif" maxsize="11240">
      <label locale="havefnubb~member.common.avatar"/>
   </upload>

   <input ref="member_town">
       <label locale="havefnubb~member.common.town"/>
   </input>
   
   <input ref="member_website" type="url">
       <label locale="havefnubb~member.common.website"/>
   </input>   
   
   <menulist ref="member_country">
      <label locale="havefnubb~member.common.country"/>
      <emptyitem locale="havefnubb~member.select.a.country"/>
      <datasource class="havefnubb~flags" />
   </menulist>

   <textarea ref="member_comment" rows="7" cols="80">
       <label locale="havefnubb~member.common.account.signature"/>
   </textarea>

    <radiobuttons ref="member_show_email">
        <label locale="havefnubb~member.account.edit.show.your.email" />
        <item value="Y" locale="havefnubb~main.common.yes"/>
        <item value="N" locale="havefnubb~main.common.no"/>
    </radiobuttons>

   <menulist ref="member_language">
      <label locale="havefnubb~member.common.language"/>
      <emptyitem locale="havefnubb~member.select.a.language"/>
      <datasource class="havefnubb~language" />
   </menulist>

   <input ref="member_xfire" type="string">
       <label locale="havefnubb~member.xfire"/>
   </input>

   <input ref="member_icq" type="string">
       <label locale="havefnubb~member.icq"/>
   </input>

   <input ref="member_yim" type="email">
       <label locale="havefnubb~member.yim"/>
   </input>

   <input ref="member_hotmail" type="email">
       <label locale="havefnubb~member.hotmail"/>
   </input>

   <input ref="member_aol" type="email">
       <label locale="havefnubb~member.aol"/>
   </input>

   <input ref="member_gtalk" type="email">
       <label locale="havefnubb~member.gtalk"/>
   </input>
   
   <input ref="member_jabber" type="email">
       <label locale="havefnubb~member.jabber"/>
   </input>
   
   <input ref="member_connection">
       <label locale="havefnubb~member.connection"/>
   </input>

   <input ref="member_os">
       <label locale="havefnubb~member.os"/>
   </input>

   <input ref="member_proc">
       <label locale="havefnubb~member.proc"/>
   </input>

   <input ref="member_ram">
       <label locale="havefnubb~member.ram"/>
   </input>

   <input ref="member_display">
       <label locale="havefnubb~member.display"/>
   </input>

   <input ref="member_screen">
       <label locale="havefnubb~member.screen"/>
   </input>

   <input ref="member_mouse">
       <label locale="havefnubb~member.mouse"/>
   </input>

   <input ref="member_keyb">
       <label locale="havefnubb~member.keyb"/>
   </input>

   <input ref="member_mb">
       <label locale="havefnubb~member.mb"/>
   </input>
   
   <input ref="member_card">
       <label locale="havefnubb~member.card"/>
   </input>
   <submit ref="acc_submit">
       <label locale="account.form.submit" />
   </submit>
</form>