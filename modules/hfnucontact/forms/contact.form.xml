<?xml version="1.0" encoding="utf-8"?>
<form xmlns="http://jelix.org/ns/forms/1.1">

<hidden ref="to"/>

<input ref="subject" type="string" required="true" size="80">
	<label locale="hfnucontact~contact.form.subject"/>
</input>

<textarea ref="message" required="true"  rows="10" cols="80">
	<label locale="hfnucontact~contact.form.message"/>
</textarea>

<submit ref="validate">
  <label>Veuillez valider</label>
  <item value="save" locale="hfnucontact~contact.form.saveBt"/>
</submit>
<reset ref="cancel">
	<label locale="hfnucontact~contact.form.cancelBt"/>
</reset>
</form>
